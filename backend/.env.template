# Snatchbase Service Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=postgresql://snatchbase:snatchbase@localhost/snatchbase

# API Service
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Telegram Bot Service
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USER_ID=your_user_id_here

# File Watcher Service
# Monitors incoming directory for ZIP files
FILE_WATCHER_ENABLED=true
FILE_WATCHER_INTERVAL=5

# Wallet Balance Checker Service
# Periodically checks wallet balances (resource intensive)
WALLET_CHECKER_ENABLED=false
WALLET_CHECKER_INTERVAL=3600
WALLET_CHECK_BATCH_SIZE=100

# Health Check & Restart Configuration
HEALTH_CHECK_INTERVAL=30
SERVICE_RESTART_DELAY=5
MAX_RESTART_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
